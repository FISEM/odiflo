{
    "name": "@odiflo/easy-intl",
    "version": "0.1.0",
    "description": "Component-level i18n with template literals and custom formatters",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "react-server": {
                "require": "./dist/react-server.js",
                "import": "./dist/react-server.mjs",
                "types": "./dist/react-server.d.ts"
            },
            "default": {
                "require": "./dist/react-client.js",
                "import": "./dist/react-client.mjs",
                "types": "./dist/react-client.d.ts"
            }
        }
    },
    "scripts": {
        "build": "tsup src/react-client.ts src/react-server.ts --format cjs,esm --dts --splitting=false",
        "dev": "tsup src/react-client.ts src/react-server.ts --format cjs,esm --dts --watch --splitting=false",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "i18n",
        "intl",
        "internationalization",
        "localization",
        "translation",
        "nextjs",
        "react",
        "formatters",
        "co-location",
        "ssr",
        "server-components"
    ],
    "author": "Israel Emmanuel Matenly Forestal",
    "license": "MIT",
    "peerDependencies": {
        "react": ">=16.8.0"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@testing-library/react": "^14.0.0",
        "@types/jest": "^29.5.0",
        "@types/react": "^18.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "ts-jest": "^29.1.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    },
    "files": [
        "dist",
        "README.md"
    ]
}
